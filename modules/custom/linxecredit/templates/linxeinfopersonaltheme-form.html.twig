                        {% if form['#myvars'].showInfoPersonalForm == false  %}
                            {{drupal_entity('block_content', '27') }}
                        {% else %}       
                            <form class="formularioin" name="edit_info" id="edit-info">
                                <h2 class="text1">Información Personal</h2>
                                <div class="form-row">
                                    <div class="col-md-12 px-3">
                                        <div class="form-group">
                                            <input type="text" id="nombre" name="nombre" value="{{form['#myvars'].nombres}}"  data-msj="Nombre, es un dato obligatorio" readonly="readonly" />
                                            <label class="label" for="nombre">Nombre:</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-6 px-3">
                                        <div class="form-group">
                                            <input type="text" id="tipo_doc" name="tipo_doc" value="{{form['#myvars'].tipodoc}}"  data-msj="Tipo de documento, es un dato obligatorio" readonly="readonly" />
                                            <label class="label" for="tipo_doc">Tipo de Documento:</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 px-3">
                                        <div class="form-group">
                                            <input type="number" id="doc" name="documento" value="{{form['#myvars'].numdoc}}" data-msj="Número de documento, es un dato obligatorio" readonly="readonly" />
                                            <label class="label" for="doc">Número de Documento:</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-6 px-3">
                                        <div class="form-group">
                                            <input type="tel" id="celular" name="celular" value="{{form['#myvars'].celular}}" data-msj="Celular, es un dato obligatorio" readonly="readonly"  />
                                            <label class="label" for="celular">Celular:</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 px-3">
                                        <div class="form-group">
                                            <input type="email" id="correo" name="correo" value="{{form['#myvars'].email}}" data-msj="Correo electrónico, es un dato obligatorio" readonly="readonly" />
                                            <label class="label" for="correo">Correo Electrónico:</label>
                                        </div>
                                    </div>
                                </div>
                                <h2 class="text1">Contraseña</h2>

                                <div class="form-row">
                                    <div class="col-md-6 px-3">
                                        <div class="form-group">
                                            {{ form.password_old }}
                                            <button id="show_password" class="btn-showp" type="button"> <span class="fa fa-eye icon"></span> </button>
                                        </div>
                                    </div>
                                    <div class="col-md-6 px-3">
                                        <div class="form-group">
                                            {{ form.password }}
                                            <button id="show_password" class="btn-showp" type="button"> <span class="fa fa-eye icon"></span> </button>
                                        </div>
                                    </div>
                                    <div class="col-12 px-3">
                                        <div class="form-group">
                                            {{ form.password2 }}
                                            <button id="show_password" class="btn-showp" type="button"> <span class="fa fa-eye icon"></span> </button>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-row d-flex justify-content-center">
                                    <div class="col-md-7 text-center">
                                        {{ form.actions.submit }}
                                        {{ form.form_build_id }}
                                        {{ form.form_token }}
                                        {{ form.form_id }}
                                    </div>
                                    <div id="errorMsj" class="errorMsj"></div>
                                </div>
                            </form>
                        {% endif %}